-- // FYNX HUB GUI //
if game.CoreGui:FindFirstChild("FYNX_HUB") then
    game.CoreGui.FYNX_HUB:Destroy()
end

local player = game.Players.LocalPlayer
local UserInputService = game:GetService("UserInputService")

-- // Create main ScreenGui //
local gui = Instance.new("ScreenGui")
gui.Name = "FYNX_HUB"
gui.Parent = game.CoreGui
gui.ResetOnSpawn = false

-- // Main Frame //
local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 340, 0, 250)
frame.Position = UDim2.new(0.5, -170, 0.5, -125)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 50)
frame.Active = true
frame.BorderSizePixel = 0

local uicorner = Instance.new("UICorner", frame)
uicorner.CornerRadius = UDim.new(0, 12)

-- // Header //
local header = Instance.new("TextLabel", frame)
header.Size = UDim2.new(1, 0, 0, 35)
header.BackgroundColor3 = Color3.fromRGB(50, 50, 90)
header.Text = "‚ö° FYNX HUB"
header.Font = Enum.Font.GothamBold
header.TextSize = 18
header.TextColor3 = Color3.fromRGB(255, 255, 255)
header.BorderSizePixel = 0

local headerCorner = Instance.new("UICorner", header)
headerCorner.CornerRadius = UDim.new(0, 12)

-- // Close Button //
local closeBtn = Instance.new("TextButton", header)
closeBtn.Size = UDim2.new(0, 35, 0, 35)
closeBtn.Position = UDim2.new(1, -40, 0, 0)
closeBtn.BackgroundTransparency = 1
closeBtn.Text = "‚úñ"
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 18
closeBtn.TextColor3 = Color3.fromRGB(255, 120, 120)

closeBtn.MouseButton1Click:Connect(function()
    gui:Destroy()
end)

-- // Tab Buttons //
local tabHolder = Instance.new("Frame", frame)
tabHolder.Size = UDim2.new(0, 100, 1, -35)
tabHolder.Position = UDim2.new(0, 0, 0, 35)
tabHolder.BackgroundColor3 = Color3.fromRGB(40, 40, 70)
tabHolder.BorderSizePixel = 0

local tabCorner = Instance.new("UICorner", tabHolder)
tabCorner.CornerRadius = UDim.new(0, 12)

-- // Tab Content Frame //
local tabFrame = Instance.new("Frame", frame)
tabFrame.Size = UDim2.new(1, -110, 1, -45)
tabFrame.Position = UDim2.new(0, 110, 0, 40)
tabFrame.BackgroundTransparency = 1

-- // Tabs //
local tabs = {}
local function createTabButton(name)
    local btn = Instance.new("TextButton", tabHolder)
    btn.Size = UDim2.new(1, 0, 0, 35)
    btn.BackgroundTransparency = 1
    btn.Text = name
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 14
    btn.TextColor3 = Color3.fromRGB(255,255,255)
    return btn
end

tabs["Player"] = createTabButton("Player")
tabs["Auto"] = createTabButton("Auto")
tabs["Discord"] = createTabButton("Discord")

-- // PLAYER TAB //
local playerTab = Instance.new("Frame", tabFrame)
playerTab.Size = UDim2.new(1,-8,1,0)
playerTab.Position = UDim2.new(0,4,0,0)
playerTab.BackgroundTransparency = 1
playerTab.Visible = true

local comingSoonLabel = Instance.new("TextLabel", playerTab)
comingSoonLabel.Size = UDim2.new(1, 0, 1, 0)
comingSoonLabel.Position = UDim2.new(0, 0, 0, 0)
comingSoonLabel.BackgroundTransparency = 1
comingSoonLabel.Text = "üöß Player features coming soon!"
comingSoonLabel.Font = Enum.Font.GothamBold
comingSoonLabel.TextSize = 18
comingSoonLabel.TextColor3 = Color3.fromRGB(180,180,255)
comingSoonLabel.TextStrokeTransparency = 0.8
comingSoonLabel.TextYAlignment = Enum.TextYAlignment.Center
comingSoonLabel.TextXAlignment = Enum.TextXAlignment.Center

-- // AUTO TAB //
local autoTab = Instance.new("Frame", tabFrame)
autoTab.Size = UDim2.new(1,-8,1,0)
autoTab.Position = UDim2.new(0,4,0,0)
autoTab.BackgroundTransparency = 1
autoTab.Visible = false

local autoLabel = Instance.new("TextLabel", autoTab)
autoLabel.Size = UDim2.new(1, 0, 0, 24)
autoLabel.Position = UDim2.new(0, 10, 0, 10)
autoLabel.BackgroundTransparency = 1
autoLabel.Text = "‚öôÔ∏è Auto Features"
autoLabel.Font = Enum.Font.GothamBold
autoLabel.TextSize = 16
autoLabel.TextColor3 = Color3.fromRGB(255,255,255)
autoLabel.TextXAlignment = Enum.TextXAlignment.Left

local autoBuy = Instance.new("TextButton", autoTab)
autoBuy.Size = UDim2.new(1,-20,0,30)
autoBuy.Position = UDim2.new(0,10,0,50)
autoBuy.BackgroundColor3 = Color3.fromRGB(255,180,90)
autoBuy.Text = "üí∞ Auto Buy: OFF"
autoBuy.Font = Enum.Font.GothamBold
autoBuy.TextSize = 14
autoBuy.TextColor3 = Color3.fromRGB(0,0,0)
autoBuy.BorderSizePixel = 0

-- // Optimized Auto Buy Code //
local autoBuyEnabled = false
autoBuy.MouseButton1Click:Connect(function()
    autoBuyEnabled = not autoBuyEnabled
    autoBuy.Text = autoBuyEnabled and "üí∞ Auto Buy: ON" or "üí∞ Auto Buy: OFF"

    task.spawn(function()
        while autoBuyEnabled do
            local success, err = pcall(function()
                -- ‚ö†Ô∏è Replace this with your actual buy RemoteEvent
                -- Example: game.ReplicatedStorage.Remotes.BuyItem:FireServer()
                game:GetService("ReplicatedStorage").RemoteEvent:FireServer("Buy")
            end)

            if not success then
                warn("Auto Buy error: " .. tostring(err))
            end

            task.wait(0.3) -- ‚úÖ Smooth, no lag
        end
    end)
end)

-- // DISCORD TAB //
local discordTab = Instance.new("Frame", tabFrame)
discordTab.Size = UDim2.new(1,-8,1,0)
discordTab.Position = UDim2.new(0,4,0,0)
discordTab.BackgroundTransparency = 1
discordTab.Visible = false

local discordBtn = Instance.new("TextButton", discordTab)
discordBtn.Size = UDim2.new(1,-20,0,32)
discordBtn.Position = UDim2.new(0,10,0,10)
discordBtn.BackgroundColor3 = Color3.fromRGB(90,110,255)
discordBtn.Text = "Join our Discord üîó"
discordBtn.Font = Enum.Font.GothamBold
discordBtn.TextSize = 14
discordBtn.TextColor3 = Color3.fromRGB(255,255,255)
discordBtn.BorderSizePixel = 0

discordBtn.MouseButton1Click:Connect(function()
    setclipboard("https://discord.gg/YOURSERVER")
end)

-- // Tab Switching //
for name, button in pairs(tabs) do
    button.MouseButton1Click:Connect(function()
        for _, tab in pairs(tabFrame:GetChildren()) do
            if tab:IsA("Frame") then
                tab.Visible = false
            end
        end
        playerTab.Visible = (name == "Player")
        autoTab.Visible = (name == "Auto")
        discordTab.Visible = (name == "Discord")
    end)
end

-- // Make the frame draggable (PC + Mobile) //
local dragging = false
local dragStart, startPos

local function updateDrag(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

header.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

header.InputChanged:Connect(function(input)
    if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
        updateDrag(input)
    end
end)

print("‚úÖ FYNX HUB loaded successfully.")
